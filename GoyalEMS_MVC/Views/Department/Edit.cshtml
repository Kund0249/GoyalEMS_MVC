@model GoyalEMS_MVC.Models.DepartmentModel


@{
    ViewBag.Title = "Edit Department";
}


<form method="post">
    <div class="form-horizontal">
        <h4>DepartmentModel</h4>
        <hr />

        <input type="hidden" name="DepartmentId" value="@Model.DepartmentId" />
        <div class="form-group">
            <label>Department Code</label>

            <div class="col-md-10">
                @Html.TextBoxFor(x => x.DepartmentCode,new {@class = "form-control" })
                @Html.ValidationMessageFor(x => x.DepartmentCode,"", new { @class = "text-danger" })
                @*<input type="text" name="DepartmentCode"
                       value="@Model.DepartmentCode" />*@

            </div>
        </div>

        <div class="form-group">
            <label>DepartmentName</label>

            <div class="col-md-10">
                @*<input type="text" name="DepartmentName"
        value="@Model.DepartmentName" />*@
                @Html.TextBoxFor(x => x.DepartmentName, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.DepartmentName, "", new { @class = "text-danger" })

            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>


@section Script{
    <script src="~/Scripts/jquery-1.8.0.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}
