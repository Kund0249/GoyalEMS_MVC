@model IEnumerable<GoyalEMS_MVC.Models.EmployeeModel>


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EmployeeList</title>
    <style>
        .ProfileImage {
            width: 100px;
            height: 100px;
            border-radius: 50px;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-10 offset-1">
                <div class="row mt-3 mb-2">
                    @using (Html.BeginForm("FilteredEmployee", "Employee",FormMethod.Post))
                    {
                        <div class="card">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-3">
                                        <label><b>Employee Code</b></label>
                                        <input type="text" class="form-control"
                                               placeholder="Enter Employee Code" 
                                               name="EmployeeCode"/>
                                    </div>
                                    <div class="col-3">
                                        <label><b>Employee Email</b></label>
                                        <input type="text" class="form-control"
                                               placeholder="Enter Employee Email" 
                                               name="EmployeeEmail"/>
                                    </div>
                                    <div class="col-3 mt-4">
                                        <input type="submit" value="Search" class="btn btn-primary" />
                                    </div>

                                </div>
                            </div>
                        </div>
                    }

                </div>
                <div class="row">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Profile Image</th>
                                <th>EmpCode</th>
                                <th>Name</th>
                                <th>Gender</th>
                                <th>Email</th>
                                <th>DOB</th>
                                <th>DOJ</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Count() > 0)
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <img src="../@item.ProfileImagePath"
                                                 class="ProfileImage" alt="Employee Image" />
                                        </td>
                                        <td>@item.EmpCode</td>
                                        <td>@item.EmpName</td>
                                        <td>@item.Gender</td>
                                        <td>@item.EmailId</td>
                                        <td>@item.DOB.ToString("dd-MM-yyyy")</td>
                                        <td>@item.DOJ</td>

                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <th colspan="7" class="text-danger text-center">
                                        There is no data!
                                    </th>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>

    </div>
</body>
</html>
